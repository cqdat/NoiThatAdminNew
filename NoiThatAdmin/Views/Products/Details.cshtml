                                                }
                                                else
                                                {
                                                    <span class="badge">#</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Lượt xem</td>
                                            <td>
                                                <span class="badge badge-info">@Model.CountView</span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Ẩn/Hiện Website</td>
                                            <td>
                                                @if (Model.IsActive == true)
                                                {
                                                    <span class="badge badge-success">Đang hiện thị</span>
                                                }
                                                else
                                                {
                                                    <span class="badge">Ẩn</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Tình Trạng</td>
                                            <td>
                                                @if (Model.InStock == true)
                                                {
                                                    <span class="badge badge-success">Còn hàng</span>
                                                }
                                                else
                                                {
                                                    <span class="badge">Tạm hết hàng</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Tạo lúc</td>
                                            <td>
                                                @Convert.ToDateTime(Model.Created).ToString(WebConstants.DatetimeFormatVI)  bởi: <a>Admin</a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
