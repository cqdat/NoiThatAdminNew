        <div class="btn-toolbar">
            <a href="javascript:" class="btn btn-label btn-info" id="btnUploadImage" productid="@Model.ProductID"><i class="fa fa-upload"></i>Upload ảnh</a>
            <a href="/Products/Edit/@Model.ProductID" class="btn btn-success btn-label"><i class="fa fa-edit"></i>Chỉnh sửa</a>
            <a href="/Products/Index" class="btn btn-primary">Quay Lại</a>
        </div>
    </div>
</div>
