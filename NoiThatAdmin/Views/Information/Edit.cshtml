@model NoiThatAdmin.Models.DataModels.Information

@{
    ViewBag.Title = "Edit";
}

    <div id="page-heading">
        <ol class="breadcrumb">
            <li><a href="/">Trang chủ</a></li>
            <li class="active">Chỉnh sửa thông tin chung</li>

        </ol>

        <h1>Sửa thông tin</h1>
        <div class="options">
            <div class="btn-toolbar">
                <a href="/Categories" class="btn btn-primary btn-label"><i class="fa fa-list"></i>Danh Sách</a>
            </div>
        </div>
    </div>


<div class="container">
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.InfoID)

                <div class="form-group">
                    <label class="control-label col-md-2">Định Danh</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line valid" data-val="true" data-val-length="The field InfoCode must be a string with a maximum length of 8." data-val-length-max="8" id="InfoCode" name="InfoCode" type="text" value="@Model.InfoCode" aria-describedby="InfoCode-error" aria-invalid="false" readonly="readonly">
                        @Html.ValidationMessageFor(model => model.InfoCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Nội Dung</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.InfoContent, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.InfoContent, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
